{
    "$schema": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/workflow-schema.json",
    "creator": "jopemachine",
    "name": "arvis-extension-updater",
    "enabled": true,
    "description": "Arvis extension updater",
    "defaultIcon": "icon.png",
    "readme": "",
    "version": "0.0.3",
    "webAddress": "https://github.com/jopemachine/arvis-extension-updater",
    "commands": [
        {
            "type": "keyword",
            "command": "update",
            "title": "Update all extensions to latest version",
            "subtitle": "(Only update extensions installed by npm)",
            "argType": "no",
            "actions": [
                {
                    "type": "script",
                    "modifiers": "normal",
                    "script": "node index.js",
                    "actions": [
                        {
                            "type": "notification",
                            "modifiers": "normal",
                            "title": "{query}",
                            "text": ""
                        }
                    ]
                }
            ]
        }
    ]
}
